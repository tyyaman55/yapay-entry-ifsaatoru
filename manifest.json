{
    "manifest_version": 3,
    "name": "yapay entry ifşaatörü",
    "version": "1.0",
    "description": "ekşi sözlük entry'lerini analiz ederek yapay zeka izlerini tespit eder.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "options_ui": {
        "page": "ayarlar.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "simgeler/simge16.png",
        "32": "simgeler/simge32.png",
        "48": "simgeler/simge48.png",
        "128": "simgeler/simge128.png"
    },
    "action": {
        "default_icon": {
            "16": "simgeler/simge16.png",
            "32": "simgeler/simge32.png",
            "48": "simgeler/simge48.png",
            "128": "simgeler/simge128.png"
        }
    },
    "background": {
        "service_worker": "arkaplan.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "simgeler/simge16.png"
            ],
            "matches": [
                "*://eksisozluk.com/*",
                "*://users.eksisozluk.com/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://eksisozluk.com/*",
                "*://*.eksisozluk.com/*"
            ],
            "js": [
                "simgeler.js",
                "icerik.js"
            ],
            "css": [
                "bicim.css"
            ]
        }
    ]
}